<!DOCTYPE html>
<html lang="en">
{% trans_default_domain "messages" %}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{{ "navbar.navbar_name"|trans() }}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}"/>
</head>

<body>

<div class="container">
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
                    <span class="navbar-brand">
                        <a class="navbar-brand"> {{ "navbar.navbar_brand"|trans() }}</a>
                    </span>
        </div>
        <ul class="nav navbar-nav">
            <li>
                <a href="">
                    <div>
                        <a class="navbar-brand"> {{ "navbar.navbar_homepage"|trans() }}</a>
                    </div>
                </a>
            </li>

            <li>
                <a href="">
                    <div>
                        <a class="navbar-brand"> {{ "navbar.navbar_teams"|trans() }}</a>
                    </div>
                </a>
            </li>

            <li>
                <a href="">
                    <div>
                        <a class="navbar-brand"> {{ "navbar.navbar_tournaments"|trans() }}</a>
                    </div>
                </a>
            </li>

            <li>
                <a href="">
                    <div>
                        <a class="navbar-brand"> {{ "navbar.navbar_events"|trans() }}</a>
                    </div>
                </a>
            </li>

            <li>
                <a href="">
                    <div>
                        <a class="navbar-brand"> {{ "navbar.navbar_contacts"|trans() }}</a>
                    </div>
                </a>
            </li>

            <li>
                <div class="btn-group" role="group" aria-label="Select language">
                    <button type="button" class="btn btn-default">
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">{{ "lang.english"|trans() }}</a>
                    </button>
                    <button type="button" class="btn btn-default">
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ru'})) }}">{{ "lang.russian"|trans() }}</a>
                    </button>
                    <button type="button" class="btn btn-default">
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ua'})) }}">{{ "lang.ukrainian"|trans() }}</a>
                    </button>
                    <button type="button" class="btn btn-default">
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'de'})) }}">{{ "lang.german"|trans() }}</a>
                    </button>
                </div>
            </li>
        </ul>
    </nav>
    {% block content %}{% endblock %}
</div>
{% block javascripts %}{% endblock %}</body>

</html>
