{% extends ':default:layout.html.twig' %}
{% trans_default_domain "messages" %}

{% block content %}

    <div class="container">
        <div class="form-horizontal">
            <div class="col-md-5">
                <form role="form" method="POST" id="create_event">
                    <div class="form-group">
                        <div class="col-sm-12">
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_title"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_author"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_body"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style':'height: 200px'}}) }}
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-offset-10">
                        <button type="submit"
                                class="btn btn-lg btn-primary">{{ "submit.submit_button"|trans() }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="'row">
            <div class="col-md-7">
                <div class="webber-article">
                    <div class="control-block">
                        <a href="{{ path('delete_event', {'slug':event.getSlug }) }}"
                           id="delete_event">{{ "event.event_delete_message"|trans() }}</a>
                    </div>

                    <div class="title">
                        <a href="{{ path('view_event', { 'slug':event.getSlug }) }}">{{ event.title }}</a>
                    </div>
                    <div class="info-block">
                        <p>
                            {{ "event.event_created_at"|trans() }}: <b>{{ event.createdAt|date("d.m.Y H:i:s") }}</b><br>
                            {{ "event.event_updated_at"|trans() }}: <b>{{ event.updatedAt|date("d.m.Y H:i:s") }}</b><br>
                            {{ "event.event_author"|trans() }}: <b>{{ event.author }}</b><br>
                            {{ "event.event_comments_count"|trans() }}: <b>{{ event.comment|length }}</b>
                        </p>
                    </div>
                    <div class="text">
                        <p>{{ event.text }}</p>
                    </div>
                </div>
                <div class="comment-article">
                    <h3>
                        {{ "comment.comment_body"|trans() }}:
                    </h3>
                    <ul id="category_list">
                        {% for comment in event.comment|reverse %}
                            <li>
                                <div class="comment">
                                    <div class="info-block">
                                        <p>
                                            {{ "comment.comment_author"|trans() }}: <b>{{ comment.author }}</b></br>
                                            Created at: <b>{{ comment.createdAt|date("d.m.Y H:i:s") }}</b>
                                        </p>
                                    </div>

                                    <div class="text">
                                        <p>
                                            {{ comment.text }}
                                        </p>
                                    </div>
                                </div>
                            </li>
                        {% else %}
                            <li>
                                <h3> No comments...</h3>
                            </li>
                        {% endfor %}
                    </ul>

                    <div>
                        <h3>{{ "comment.comment_body"|trans() }}:</h3>

                        <form id="comment_add" role="form" action="{{ path("comment_add", {"slug" : event.slug}) }}"
                              method="POST">
                            <div>
                                {{ form_row(form.author) }}
                            </div>
                            <div class="col-sm-5 control-label">
                                {{ "comment.comment_author"|trans() }}
                            </div>

                            <div class="text">
                                {{ form_row(form.text) }}
                                <div id="clear"></div>
                            </div>
                            <div class="col-sm-5 control-label">
                                {{ "comment.comment_body"|trans() }}
                            </div>

                            {{ form_rest(form) }}

                            <div>
                                <input type="submit" value="{{ "submit.submit_button"|trans() }}">
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}