{% extends ':default:layout.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}
    {{ "title.create_post"|trans() }}
{% endblock %}

{% block content %}

<div class="container">
    <div class="'row">
        <div class="form-horizontal">
            <div class="col-md-5">
                <form role="form" method="POST" id="create_event">
                    <div class="form-group">
                        <div class="col-sm-12">
                            {#{{ form_errors(form.name) }}#}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_title"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {#{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}#}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            {#{{ form_errors(form.name) }}#}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_author"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {#{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}#}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            {#{{ form_errors(form.name) }}#}
                        </div>
                        <div class="col-sm-5 control-label">
                            {{ "event.event_body"|trans() }}
                        </div>
                        <div class="col-sm-5">
                            {#{{ form_widget(form.name, {'attr': {'class': 'form-control', 'style':'height: 200px'}}) }}#}
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-offset-10">
                        <button type="submit"
                                class="btn btn-lg btn-primary">{{ "submit.submit_button"|trans() }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}